<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Nodify">

    <Style TargetType="{x:Type local:SmartConnection}">
        <Setter Property="StrokeThickness"
                Value="3" />
        <Setter Property="Stroke"
                Value="DodgerBlue" />
        <Setter Property="Source"
                Value="{Binding SourceElement.Anchor, RelativeSource={RelativeSource Self}}" />
        <Setter Property="Target"
                Value="{Binding TargetElement.Anchor, RelativeSource={RelativeSource Self}}" />
    </Style>

    <Style TargetType="{x:Type local:Connection}"
           BasedOn="{StaticResource {x:Type local:SmartConnection}}" />

    <Style TargetType="{x:Type local:DirectionalConnection}"
           BasedOn="{StaticResource {x:Type local:SmartConnection}}">
        <Setter Property="Fill"
                Value="DodgerBlue" />
    </Style>

    <Style TargetType="{x:Type local:CircuitConnection}"
           BasedOn="{StaticResource {x:Type local:SmartConnection}}">
        <Setter Property="Fill"
                Value="DodgerBlue" />
    </Style>

</ResourceDictionary>